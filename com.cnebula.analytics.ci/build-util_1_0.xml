			<ftp action="mkdir" server="@{server}" userid="@{userid}" password="@{password}"
						remotedir="@{remote.dist.root}/@{jar.dir.of.ftp}" skipFailedTransfers="true"/>
			<ftp server="@{server}" userid="@{userid}" password="@{password}" passive="true" 
						remotedir="@{remote.dist.root}/@{jar.dir.of.ftp}" verbose="true" >
				<fileset dir="@{target.platform.root}/temp/">
					<include name="@{test.bundle.name}.jar"/>
				</fileset>
			</ftp>
			<delete dir="@{target.platform.root}/temp"/>
		</sequential>

